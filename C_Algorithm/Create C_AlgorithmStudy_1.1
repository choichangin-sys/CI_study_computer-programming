#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>

int factorial_1(int n);
int factorial_2(int n);

int factorial_1(int n)
{
	int value;

	value = 1;
	for (int i = 2; i <= n; i++)
	{
		value *= i;
	}

	return value;
}

int factorial_2(int n)
{
	if (n == 1)
	{
		return 1;
	}
	else
	{
		return n * factorial_2(n - 1);
		/*
			n = 4이면
			4 * factorial_2(4 - 1)이고 [= 4 * factorial_2(3)]
			4 * 3 * factorial_2(3 - 1)이고 [= 4 * 3 * factorial_2(2)]
			4 * 3 * 2 * factorial_2(2 - 1)이고 [= 4 * 3 * 2 *factorial_2(1)]
			factorial_2(1)은 return값이 1이므로 4 * 3 * 2 * 1이다.
		*/
	}
}

void main()
{
	int value, n;

	printf("n!에서 n을 입력하세요.\n");
	scanf("%d", &n);

	value = factorial_1(n);
	printf("\nfcatorial_1 : %d", value);
	
	value = factorial_2(n);
	printf("\nfcatorial_2 : %d", value);
}
