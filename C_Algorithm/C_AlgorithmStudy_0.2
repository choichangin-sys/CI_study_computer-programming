// 포인터를 사용한 두 변수값 바꾸기

#include <stdio.h>

void swap(int *x, int *y); // 포인터를 사용, 두 변수값을 바꾸기 위한 함수

int main()
{
	int x = 1, y = 2;
	int* a, * b; // 포인터 선언
	a = &x; b = &y; // 포인터 주소 연결
	swap(a, b); // 포인터 사용을 위한 포인터 넣기

	printf("%d, %d", x, y); // 변경됐음

	return 0;
}

void swap(int* x, int* y)
{
	int temp;

	temp = *x;
	*x = *y;
	*y = temp;
}
